<resources>
    <style name="TextView.Primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Secondary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
    </style>

    <style name="TextView.Tertiary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_tertiary</item>
        <item name="android:textColor">@color/tertiaryText</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
    </style>

    <style name="Header.Primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/header_text_primary</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
